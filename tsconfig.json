{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/package": [
        "./package.json"
      ],
      "@/project": [
        "./project.config.json"
      ]
    }
  },
  "include": [
    "./types",
    "./src",
    "./config",
  ],
  "compileOnSave": false
}